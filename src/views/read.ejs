<body>
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-light" id="mainNav">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand" href="/">아아M</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive"
                aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ms-auto py-4 py-lg-0">
                    <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="/music/selling">Selling</a></li>
                    <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="/board/page">Board</a></li>
                    <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="/board/contact">Donation</a></li>
                    <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="/cartlist/cart">Cart</a></li>
                    </li>
                    <% if(userInfo) { %>
                        <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="/logout">Logout</a></li>
                        <div class='session'>
                            <%= userInfo %>님 환영합니다!
                        </div>
                        <% } else{ %>
                            <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="/contact">Sign up</a>
                            </li>
                            <li class="nav-item"><a class="nav-link px-lg-3 py-2 py-lg-4" href="/login">Login</a></li>
                            <% } %>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Page Header-->
    <header class="masthead" style="background-image: url('/submain/assets/img/home-bg.jpg')">
        <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="site-heading">
                        <h1>Board</h1>
                        <span class="subheading">
                            Feel free to share your opinion</span>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- Main Content-->
    <main class="mb-4">
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="my-5">
                        <p style="padding: 18px;">
                        <h1 class="headline">
                            <%=rows.title %>
                        </h1>
                        </p>
                        <br>
                        <br>
                        <form method="post">
                            <table border="1">
                                <input type="hidden" name="idx" value="<%=rows.idx%>" />
                                <div class="form-floating">
                                    <input class="form-control" name="name" type="text" value="<%= rows.name %>"
                                        data-sb-validations="required" />
                                    <label for="name">작성자</label>
                                </div>
                                <div class="form-floating">
                                    <input class="form-control" name="title" type="text" value="<%=rows.title%>"
                                        data-sb-validations="required" />
                                    <label for="email">제목</label>
                                </div>
                                <div class="form-floating">
                                    <textarea class="form-control" name="content" id="message" style="height: 12rem"
                                        data-sb-validations="required"><%=rows.content%></textarea>
                                    <label for="message">내용</label>
                                </div>
                                <div class="form-floating">
                                    <input class="form-control" name="passwd" id="phone" type="password"
                                        data-sb-validations="required" />
                                    <label for="phone">패스워드</label>
                                </div>
                                <div class="form-floating">
                                    <input class="form-control" name="modidate" type="text" value="<%=rows.modidate%>"
                                        data-sb-validations="required" />
                                    <label for="email">변경일</label>
                                </div>
                                <div class="form-floating">
                                    <input class="form-control" name="regdate" type="text" value="<%=rows.regdate%>"
                                        data-sb-validations="required" />
                                    <label for="email">등록일</label>
                                </div>
                                <br />
                                <br />

                                <div class='headline'>
                                    <% if(userInfo) { %>
                                        <button type="submit" class="btn btn-outline-success"
                                            formaction='/board/update'>글 수정</button>
                                        <button type="submit" class="btn btn-outline-success"
                                            formaction="/board/delete">글 삭제</button>
                                        <% } %>
                                            <button type="button" class="btn btn-outline-success"
                                                onclick="location.href='/board/page'">목록으로</button>
                                </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </main>
    <footer class="border-top">
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <!-- <ul class="list-inline text-center">
                            <li class="list-inline-item">
                                <a href="#!">
                                    <span class="fa-stack fa-lg">
